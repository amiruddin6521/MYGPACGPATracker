<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bitp3453.miniproject.mygpacgpatracker.MainActivity">

    <Button
        android:id="@+id/btn_add_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Exam Result"
        android:onClick="fnAddGPA"
        android:layout_marginTop="168dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_view_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View GPA/CGPA Result"
        android:onClick="fnViewGPA"
        android:layout_marginTop="117dp"
        android:layout_alignTop="@+id/btn_add_result"
        android:layout_alignStart="@+id/btn_add_result" />

</RelativeLayout>
